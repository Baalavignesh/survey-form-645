pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'dockerhub-creds'  
        KUBECONFIG_CREDENTIALS_ID = 'kubeconfig' 
        DOCKER_REPO = 'baalavignesh21/baalavignesh-survey'
    }

    stages {
        stage('Check Docker Path') {
            steps {
                sh 'echo $PATH'
                sh 'which docker'
                sh 'docker --version'
            }
        }

        stage('Clone Repo') {
            steps {
                script {
                    // Clone the GitHub repository from the main branch
                    git branch: 'main', url: 'https://github.com/Baalavignesh/survey-form-645.git'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_REPO}:${env.BUILD_ID}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker Hub using Jenkins credentials
                    docker.withRegistry('', DOCKER_CREDENTIALS_ID) {
                        // Push the newly created Docker image
                        docker.image("${DOCKER_REPO}:${env.BUILD_ID}").push()
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Set up kubectl config using the kubeconfig secret
                    withCredentials([file(credentialsId: KUBECONFIG_CREDENTIALS_ID, variable: 'KUBECONFIG')]) {
                        sh 'kubectl apply -f deployment.yaml'  // Update your deployment 
                        sh 'kubectl rollout restart deployment/survey-deployment'  // Restart the deployment 
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up after pipeline runs
            cleanWs()
        }
    }
}
